
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-12 d-flex justify-content-center">
            <h1>Eat Da Burger</h1>
        </div>
        <div class="col-12 d-flex justify-content-center">
            <img class="burgerpic" src="/assets/img/burger.png" alt="Burger Pic">
        </div>
    </div>
    <div id="customerModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="customerModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 id="fav-burger-name" data-burgerId=""></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p><input type="text" id="customerName" placeholder="Enter your name"></p>
                </div>
                <div class="modal-footer">
                    <button id="add-fav" type="button" class="btn btn-primary" data-burgerid="">Add to Favorites</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-4 available-box">
            <h2>Available Burgers</h2>
            {{#each burgers}}
                {{#unless devoured}}
                    <p>{{burger_name}} 
                        <a class="fav" href="/" data-burgerId="{{id}}" data-burgerName ="{{burger_name}}" data-toggle="modal" data-target="customerModal">
                            <i class="fas fa-heart"></i>
                        </a>
                    </p>
                    <button class='devour-btn' data-id = "{{id}}" value="{{burger_name}}" type='button'><i class="fas fa-utensils"></i> 
                    Devour it!</button>
                    <hr> 
                {{/unless}}
            {{/each}}
        </div>
        <div class="col-4 eaten-box">
            <h2>Devoured Burgers</h2>
            {{#each burgers}}
                {{#if devoured}}
                <p>{{burger_name}}
                    <a class="fav" href="/" data-burgerId="{{id}}" value="{{burger_name}}" data-toggle="modal" data-target="customerModal">
                        <i class="fas fa-heart"></i>
                    </a>
                </p>
                <hr> 
                {{/if}}
            {{/each}}
        </div>
        <div class="col-4 fav-box">
            <h2>Favorite Burgers</h2>
            {{#each burgers}} 
                {{#if favorite}}
                    <p>{{burger_name}} - (<i class="fas fa-heart"></i> {{customers.length}})  Favorite of: {{#each customers}}{{customer_name}}! {{/each}}</p>
                    <hr> 
                {{/if}} 
            {{/each}}
        </div>
    </div>
    <div class="add-box">
        <div class="row d-flex justify-content-center">
            <h2>Add a Burger</h2>
        </div>
        <div class="row d-flex justify-content-center">
            <img class="bun" src="/assets/img/bun-top.png" alt="Bun Top">
        </div>
        <form id="newburger" >
            <div class="row  d-flex justify-content-center">
            <textarea class="new-burger-text" type="text" name="burgername" placeholder="new burger name"></textarea>
            </div>
            <div class="row  d-flex justify-content-center">
                <button id="addburger" type="button" class="btn btn-success">Submit</button>
            </div>
        </form>
        <div class="row  d-flex justify-content-center">
            <img class="bun" src="/assets/img/bun-btm.png" alt="Bun Bottom">
        </div>
    </div>
</div>

<script src="./assets/js/logic.js" type="text/javascript"></script>

